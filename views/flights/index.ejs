<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/stylesheets/style.css" />
    <title><%= title%></title>
  </head>
  <body>
    <a href="/flights/new">ADD FLIGHTS</a>
    <a href="/flights/index">ALL FLIGHTS</a>
    <table id="flightTable">
      <thead>
        <tr>
          <th>Airline</th>
          <th>Airport</th>
          <th>Flight Number</th>
          <th>Departure Date</th>
        </tr>
      </thead>
      <tbody>
        <% flights.forEach(function(f) { %>
        <tr>
          <td><%= f.airline %></td>
          <td><%= f.airport %></td>
          <td><%= f.flightNo %></td>
          <td><%=f.departs%></td>
          <td><a href="/flights/<%=f._id %>">Show Details</a></td>
        </tr>
        <% }); %>
      </tbody>
    </table>
  </body>
</html>
